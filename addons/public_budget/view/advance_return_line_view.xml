<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <!-- SEARCH VIEW -->
        <record id="view_public_budget_advance_return_line_filter" model="ir.ui.view">
            <field name="name">public_budget.advance_return_line.select</field>
            <field name="model">public_budget.advance_return_line</field>
            <field name="arch" type="xml">
                <search string="advance_return_line">
                    <field name="amount"/>
                    <group expand="0" string="Group By">
                    </group>
                </search>
            </field>
        </record>

        <!-- FORMVIEW -->
        <record id="view_public_budget_advance_return_line_form" model="ir.ui.view">
            <field name="name">public_budget.advance_return_line.form</field>
            <field name="model">public_budget.advance_return_line</field>
            <field name="arch" type="xml">
                <form string="advance_return_line">
                    <header>
                    </header>
                    <sheet string="advance_return_line">
                       <div class="oe_right oe_button_box" name="buttons">
                       </div>
                     <group>
                        <field name="amount"/> 
                        <field name="advance_request_line_id"/> 
                     </group>
                    </sheet>

                </form>
            </field>
        </record>

        <!-- TREEVIEW -->
        <record id="view_public_budget_advance_return_line_tree" model="ir.ui.view">
            <field name="name">public_budget.advance_return_line.tree</field>
            <field name="model">public_budget.advance_return_line</field>
            <field name="arch" type="xml">
                <tree string="advance_return_line"
                    >
                    <field name="amount"/>
                </tree>
            </field>
        </record>

    </data>
</openerp>
