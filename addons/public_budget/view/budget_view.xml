<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <!-- SEARCH VIEW -->
        <record id="view_public_budget_budget_filter" model="ir.ui.view">
            <field name="name">public_budget.budget.select</field>
            <field name="model">public_budget.budget</field>
            <field name="arch" type="xml">
                <search string="Budget">
                    <field name="name" string="Name"
                            />
                    <field name="year" string="Year"
                            />
                    <field name="income_account_id" string="Income Account"
                            />
                    <field name="expedient_id" string="Expedient"
                            />
                    <group expand="0" string="Group By">
                    </group>
                </search>
            </field>
        </record>

        <!-- FORMVIEW -->
        <record id="view_public_budget_budget_form" model="ir.ui.view">
            <field name="name">public_budget.budget.form</field>
            <field name="model">public_budget.budget</field>
            <field name="arch" type="xml">
                <form string="Budget">
                    <header>
                        <button name="sgn_open"
                            states="draft"
                            string="Open"
                            class="oe_highlight"
                            />
                        <button name="action_cancel_draft"
                            type="object"
                            states="cancel"
                            string="To Draft"
                            />
                        <button name="sgn_pre_close"
                            states="open"
                            string="Pre Close"
                            class="oe_highlight"
                            />
                        <button name="sgn_close"
                            states="pre_closed"
                            string="Close"
                            class="oe_highlight"
                            />
                        <button name="sgn_cancel"
                            states="closed,draft,open,pre_closed"
                            string="Cancel"
                            groups="base.group_no_one"
                            />
                        <field name="state" widget="statusbar"
                            statusbar_colors='{}'
                            />
                    </header>
                    <sheet string="Budget">
                       <div class="oe_right oe_button_box" name="buttons">
                            <button class="oe_inline oe_stat_button oe_right" name="%(action_position_analisis_tree)d" string="Position Analisis" type="action" widget="statinfo" context="{'budget_id':active_id}"/>
                       </div>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="year"/>
                                <field name="expedient_id"/>
                                <field name="income_account_id"/>
                                <field name="company_id" groups="base.group_multi_company"/>
                            </group>
                            <group>
                                <field name="total_authorized"/>
                                <field name="total_preventive"/>
                                <field name="total_requested"/>
                                <field name="passive_residue" attrs="{'invisible':[('state', 'not in', ['pre_closed','closed'])]}"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Analysis">
                                <field name="budget_position_ids" context="{'budget_id':active_id}">
                                    <tree colors="blue:type=='view'; green:budget_assignment_allowed; red: budget_assignment_allowed and projected_amount > amount;">
                                        <field name="parent_left" invisible="1"/>
                                        <field name="code"/>
                                        <field name="name"/>
                                        <field name="type" invisible="1"/>
                                        <field name="amount" attrs="{'invisible':[('budget_assignment_allowed','=',False)]}"/>
                                        <!-- <field name="draft_amount"/> -->
                                        <field name="preventive_amount"/>
                                        <field name="definitive_amount"/>
                                        <field name="to_pay_amount"/>
                                        <field name="paid_amount"/>
                                        <field name="projected_amount"/>
                                        <field name="preventive_avg" widget="progressbar" attrs="{'invisible':[('budget_assignment_allowed','=',False)]}"/>
                                        <field name="preventive_avg" widget="integer" string="%" attrs="{'invisible':[('budget_assignment_allowed','=',False)]}"/>
                                        <field name="balance_amount" attrs="{'invisible':[('budget_assignment_allowed','=',False)]}"/>
                                        <field name="budget_assignment_allowed" invisible="1"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Detail">
                                <field name="budget_detail_ids"/>
                            </page>
                            <page string="Moves">
                                <field name="budget_modification_ids"/>
                            </page>
                            <page string="Funding Moves">
                                <field name="funding_move_ids"/>
                            </page>
                            <page string="Pre Close Detail" attrs="{'invisible':[('state', 'not in', ['pre_closed','closed'])]}">
                                <group col="4">
                                    <field name="prec_passive_residue"/>
                                    <field name="prec_total_requested"/>
                                </group>
                                <field name="budget_prec_detail_ids"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- TREEVIEW -->
        <record id="view_public_budget_budget_tree" model="ir.ui.view">
            <field name="name">public_budget.budget.tree</field>
            <field name="model">public_budget.budget</field>
            <field name="arch" type="xml">
                <tree string="Budget"
                    colors="grey:state=='cancelled';blue:state in (u'draft',);black:state in (u'pre_closed', u'open', u'closed');red:state in ()"
                    >
                    <field name="name"
                        />
                    <field name="year"
                        />
                    <field name="income_account_id"
                        />
                    <field name="expedient_id"
                        />
                    <field name="state"
                        />
                </tree>
            </field>
        </record>

    </data>
</openerp>
