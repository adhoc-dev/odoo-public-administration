<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_create_payment_order_lines" model="ir.ui.view">
            <field name="name">payment.add.advance_lines.form</field>
            <field name="model">payment.add.advance_lines</field>
            <field name="arch" type="xml">
                <form string="Create Payment lines">
                    <group>
                        <field name="transaction_id" invisible="1"/>
                        <field name="partner_id"/>
                    </group>
                        <field name="advance_preventive_line_ids" options="{'no_create': True}" domain="[('transaction_id','=',transaction_id),('payment_line_id','=',False),('advance_line','=',True)]"/>
                    <footer>
                        <button name="create_payment_lines" string="Add to payment order" type="object" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_add_avance_lines" model="ir.actions.act_window">
            <field name="name">Add Advance Lines</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">payment.add.advance_lines</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

    </data>
</openerp>
