<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_expedients_move_wizard_form" model="ir.ui.view">
            <field name="name">expedients.move.wizard.form</field>
            <field name="model">public_budget.expedients_move_wizard</field>
            <field name="arch" type="xml">
                <form string="Expedients Move">
                    <group>
                        <field name="date"/>
                        <field name="user_id"/>
                        <field name="location_id"/>
                        <field name="location_dest_id"/>
                    </group>
                    <field name="expedient_ids" options="{'no_create': True}" domain="[('current_location_id', '=', location_id)]"/>
                    <footer>
                        <button name="confirm_move" string="Confirm" type="object" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_expedients_move_wizard" model="ir.actions.act_window">
            <field name="name">Expedients Move Wizard</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">public_budget.expedients_move_wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

    </data>
</openerp>
