<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_transaction_create_refund_voucher" model="ir.ui.view">
            <field name="name">public_budget.transaction_create_refund_voucher.form</field>
            <field name="model">public_budget.transaction_create_refund_voucher</field>
            <field name="arch" type="xml">
                <form string="Create Refund Voucher">
                    <group>
                        <field name="transaction_id" invisible="1"/>
                        <field name="partner_id"/>
                        <field name="journal_id"/>
                        <field name="amount"/>
                    </group>
                    <footer>
                        <button name="create_voucher" string="Create Refund Voucher" type="object" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_transaction_create_refund_voucher" model="ir.actions.act_window">
            <field name="name">Create Refund Voucher</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">public_budget.transaction_create_refund_voucher</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

    </data>
</openerp>