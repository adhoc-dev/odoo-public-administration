<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
    <record id="view_public_budget_budget_report_2_graph" model="ir.ui.view">
         <field name="name">public_budget.budget.report_2.graph</field>
         <field name="model">public_budget.budget.report_2</field>
         <field name="arch" type="xml">
             <graph string="Analisis de Presupuesto" type="pivot">
                 <field name="budget_position_id" type="row"/>
                 <!-- <field name="definitive_date" type="col"/> -->
                 <field name="preventive_amount" type="measure"/>
                 <field name="definitive_amount" type="measure"/>
                 <field name="invoiced_amount" type="measure"/>
                 <field name="to_pay_amount" type="measure"/>
                 <field name="paid_amount" type="measure"/>
             </graph>
         </field>
    </record>

    <!-- Custom report_2s (aka filters) -->
<!--     <record id="filter_request_analysis_type" model="ir.filters">
        <field name="name">By Type</field>
        <field name="model_id">public_budget.budget.report_2</field>
        <field name="domain">[]</field>
        <field name="user_id" eval="False"/>
        <field name="context">{'group_by': ['date:month', 'type_id']}</field>
    </record> -->

    <record id="view_public_budget_budget_report_2_search" model="ir.ui.view">
        <field name="name">public_budget.budget.report_2.search</field>
        <field name="model">public_budget.budget.report_2</field>
        <field name="arch" type="xml">
            <search string="Analisis de Presupuesto">
                <field name="definitive_date"/>
                <field name="preventive_amount"/>
                <field name="definitive_amount"/>
                <field name="invoiced_amount"/>
                <field name="to_pay_amount"/>
                <field name="paid_amount"/>
                <field name="budget_id"/>
                <field name="transaction_id"/>
                <field name="transaction_type_id"/>
                <field name="transaction_expedient_id"/>
                <field name="transaction_state"/>
                <field name="transaction_partner_id"/>
                <field name="supplier_id"/>
                <field name="budget_position_id"/>
                <field name="invoice_id"/>
                <field name="voucher_id"/>
                <field name="voucher_expedient_id"/>
                <group expand="1" string="Group By">
                    <filter string="Budget" name="group_budget_id" context="{'group_by':'budget_id'}"/>
                    <filter string="Transaction" name="group_transaction_id" context="{'group_by':'transaction_id'}"/>
                    <filter string="Transaction Type" name="group_transaction_type_id" context="{'group_by':'transaction_type_id'}"/>
                    <filter string="Transaction Expedient" name="group_transaction_expedient_id" context="{'group_by':'transaction_expedient_id'}"/>
                    <filter string="Transaction State" name="group_transaction_state" context="{'group_by':'transaction_state'}"/>
                    <filter string="Transaction Partner" name="group_transaction_partner_id" context="{'group_by':'transaction_partner_id'}"/>
                    <filter string="Budget Position" name="group_budget_position_id" context="{'group_by':'budget_position_id'}"/>
                    <filter string="Definitive Date" name="group_definitive_date" context="{'group_by':'definitive_date'}"/>
                    <filter string="Supplier" name="group_supplier_id" context="{'group_by':'supplier_id'}"/>
                    <filter string="Invoice" name="group_invoice_id" context="{'group_by':'invoice_id'}"/>
                    <filter string="Voucher" name="group_voucher_id" context="{'group_by':'voucher_id'}"/>
                    <filter string="Voucher Exedient" name="group_voucher_expedient_id" context="{'group_by':'voucher_expedient_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="view_public_budget_budget_report_2_tree" model="ir.ui.view">
        <field name="name">public_budget.budget.report_2.tree</field>
        <field name="model">public_budget.budget.report_2</field>
        <field name="arch" type="xml">
            <tree string="Analisis de Presupuesto">
                <field name="transaction_id"/>
                <field name="budget_position_id"/>
                <field name="supplier_id"/>
                <field name="invoice_id"/>
                <field name="voucher_id"/>
                <field name="preventive_amount"/>
                <field name="definitive_amount"/>
                <field name="invoiced_amount"/>
                <field name="to_pay_amount"/>
                <field name="paid_amount"/>
            </tree>
        </field>
    </record>

    <record id="action_public_budget_budget_report_2_all" model="ir.actions.act_window">
        <field name="name">Analisis de Presupuesto 2</field>
        <field name="res_model">public_budget.budget.report_2</field>
        <field name="view_type">form</field>
        <field name="view_mode">graph,tree,form</field>
        <!-- <field name="context">{'search_default_active_lines':1}</field> -->
        <field name="domain">[('invoice_state', 'not in', ['cancel', 'draft']), ('voucher_state', 'not in', ['cancel', 'draft']), ('affects_budget', '=', True)]</field>
        <field name="search_view_id" ref="view_public_budget_budget_report_2_search"/>
    </record>

</data>
</openerp>
