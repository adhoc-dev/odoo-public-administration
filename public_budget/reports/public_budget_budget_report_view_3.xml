<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
    <record id="view_public_budget_budget_report_3_graph" model="ir.ui.view">
         <field name="name">public_budget.budget.report_3.graph</field>
         <field name="model">public_budget.budget.report_3</field>
         <field name="arch" type="xml">
             <graph string="Analisis de Presupuesto" type="pivot">
                 <field name="assignment_position_id" type="row"/>
                 <field name="budget_position_id" type="row"/>
                 <field name="type" type="col"/>
                 <field name="amount" type="measure"/>
             </graph>
         </field>
    </record>

    <record id="view_public_budget_budget_report_3_search" model="ir.ui.view">
        <field name="name">public_budget.budget.report_3.search</field>
        <field name="model">public_budget.budget.report_3</field>
        <field name="arch" type="xml">
            <search string="Analisis de Presupuesto">
                <filter string="Affects Budget" name="affects_budget" domain="[('affects_budget', '=', True)]"/>
                <field name="type"/>
                <field name="reference"/>
                <field name="resource"/>
                <field name="amount"/>
                <field name="preventive_line_id"/>
                <field name="budget_position_id"/>
                <field name="partner_id"/>
                <field name="budget_id"/>
                <field name="advance_line"/>
                <field name="transaction_id"/>
                <field name="transaction_type_id"/>
                <field name="transaction_expedient_id"/>
                <field name="transaction_state"/>
                <field name="transaction_partner_id"/>
                <!-- <field name="supplier_id"/> -->
                <!-- <field name="invoice_id"/> -->
                <!-- <field name="voucher_id"/> -->
                <!-- <field name="voucher_expedient_id"/> -->
                <group expand="1" string="Group By">
                    <filter string="Type" name="group_type" context="{'group_by':'type'}"/>
                    <filter string="Budget" name="group_budget_id" context="{'group_by':'budget_id'}"/>
                    <filter string="Transaction" name="group_transaction_id" context="{'group_by':'transaction_id'}"/>
                    <filter string="Transaction Type" name="group_transaction_type_id" context="{'group_by':'transaction_type_id'}"/>
                    <filter string="Transaction Expedient" name="group_transaction_expedient_id" context="{'group_by':'transaction_expedient_id'}"/>
                    <filter string="Transaction State" name="group_transaction_state" context="{'group_by':'transaction_state'}"/>
                    <filter string="Transaction Partner" name="group_transaction_partner_id" context="{'group_by':'transaction_partner_id'}"/>
                    <filter string="Budget Position" name="group_budget_position_id" context="{'group_by':'budget_position_id'}"/>
                    <!-- <filter string="Definitive Date" name="group_definitive_date" context="{'group_by':'definitive_date'}"/> -->
                    <!-- <filter string="Supplier" name="group_supplier_id" context="{'group_by':'supplier_id'}"/> -->
                    <!-- <filter string="Invoice" name="group_invoice_id" context="{'group_by':'invoice_id'}"/> -->
                    <!-- <filter string="Voucher" name="group_voucher_id" context="{'group_by':'voucher_id'}"/> -->
                    <!-- <filter string="Voucher Exedient" name="group_voucher_expedient_id" context="{'group_by':'voucher_expedient_id'}"/> -->
                </group>
            </search>
        </field>
    </record>

    <record id="view_public_budget_budget_report_3_tree" model="ir.ui.view">
        <field name="name">public_budget.budget.report_3.tree</field>
        <field name="model">public_budget.budget.report_3</field>
        <field name="arch" type="xml">
            <tree string="Analisis de Presupuesto">
                <field name="type"/>
                <field name="preventive_line_id"/>
                <field name="transaction_id"/>
                <!-- <field name="model"/> -->
                <!-- <field name="res_id"/> -->
                <field name="reference"/>
                <field name="resource"/>
                <field name="partner_id"/>
                <field name="budget_position_id"/>
                <field name="amount" sum="Total"/>
                <!-- <field name="supplier_id"/> -->
                <!-- <field name="invoice_id"/> -->
                <!-- <field name="voucher_id"/> -->
            </tree>
        </field>
    </record>

    <record id="view_public_budget_budget_report_3_form" model="ir.ui.view">
        <field name="name">public_budget.budget.report_3.form</field>
        <field name="model">public_budget.budget.report_3</field>
        <field name="arch" type="xml">
            <form string="Analisis de Presupuesto">
                <group>
                    <group>
                        <field name="type"/>
                        <field name="reference"/>
                        <field name="resource"/>
                        <!-- <field name="res_id"/> -->
                        <!-- <field name="model"/> -->
                        <field name="partner_id"/>
                        <field name="affects_budget"/>
                        <field name="advance_line"/>
                        <field name="preventive_line_id"/>
                        <field name="budget_position_id"/>
                        <field name="assignment_position_id"/>
                        <field name="amount"/>
                    </group>
                    <group>
                    <!-- transaction fields -->
                        <field name="budget_id"/>
                        <field name="transaction_date"/>
                        <field name="transaction_type_id"/>
                        <field name="transaction_partner_id"/>
                        <field name="transaction_state"/>
                        <field name="transaction_id"/>
                    </group>
                </group>
            </form>
        </field>
    </record>

    <record id="action_public_budget_budget_report_3_all" model="ir.actions.act_window">
        <field name="name">Analisis de Presupuesto</field>
        <field name="res_model">public_budget.budget.report_3</field>
        <field name="view_type">form</field>
        <field name="view_mode">graph,tree,form</field>
        <field name="context">{'search_default_affects_budget': 1}</field>
        <!-- <field name="domain">[('affects_budget', '=', True)]</field> -->
        <field name="domain">[]</field>
        <field name="search_view_id" ref="view_public_budget_budget_report_3_search"/>
    </record>

</data>
</openerp>
