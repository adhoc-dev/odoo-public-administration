<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- FORMVIEW -->
        <record id="view_public_budget_transaction_form" model="ir.ui.view">
            <field name="name">public_budget.transaction.form</field>
            <field name="model">public_budget.transaction</field>
            <field name="inherit_id" ref="public_budget.view_public_budget_transaction_form"/>
            <field name="arch" type="xml">
                <button name="action_cancel_draft" position="before">
                    <button name="%(action_aeroo_report_transaction)d" class="oe_highlight" string="Print" type="action"/>
                </button>
                <form>
                    <field name="definitive_partner_type" invisible="1"/>
                </form>
                <!-- because it wont update till we save it we add definitive part tipe in context -->
                 <field name="advance_preventive_line_ids" position="attributes">
                    <attribute name="context">{'default_definitive_partner_type': definitive_partner_type, 'default_advance_line': 1, 'default_preventive_status': 'confirmed', 'advance_line': 1}</attribute>
                </field>
                 <field name="preventive_line_ids" position="attributes">
                    <attribute name="context">{'default_definitive_partner_type': definitive_partner_type}</attribute>
                </field>
            </field>
        </record>

    </data>
</openerp>