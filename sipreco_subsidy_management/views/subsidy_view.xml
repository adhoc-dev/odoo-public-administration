<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- FORMVIEW -->
        <record id="view_public_budget_subsidy_form" model="ir.ui.view">
            <field name="name">public_budget.subsidy.form</field>
            <field name="model">public_budget.subsidy</field>
            <field name="arch" type="xml">
                <form string="Subsidios">
                    <field name="name" invisible="1"/>
                    <field name="state" string="Transaction State" invisible="1"/>
                    <header>
                        <field name="accountability_state" widget="statusbar" clickable="true"/>
                    </header>
                    <sheet string="Subsidios">
                        <group>
                            <field name="transaction_id" readonly="1" required="0"/>
                            <field name="expedient_id" string="Expediente Administrativo de Solicitud"/>
                            <field name="amount"/>
                            <field name="parliamentary_resolution_date"/>
                            <field name="parliamentary_expedient"/>
                            <field name="accountability_administrative_expedient_id"/>
                            <!-- fields from transaction -->
                            <field name="partner_id"/>
                            <field name="user_id"/>
                            <field name="budget_id"/>
                            <field name="issue_date"/>
                            <field name="destination"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                        <notebook>
                            <page string="Renditions">
                                <field name="rendition_ids" context="{'default_expedient_id': accountability_administrative_expedient_id}">
                                    <tree editable="bottom">
                                        <field name="date"/>
                                        <field name="expedient_id"/>
                                        <field name="approval_arrangement_ids" widget="many2many_tags"/>
                                        <field name="rendition_amount" sum="Total"/>
                                        <field name="approved_amount" sum="Total"/>
                                        <field name="pending_amount" sum="Total"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Claims">
                                <field name="claim_ids">
                                    <tree editable="bottom">
                                        <field name="date"/>
                                        <field name="type"/>
                                        <field name="name"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Payment Orders and Refunds">
                                <group>
                                    <field name="advance_paid_amount"/>
                                    <field name="charge_date"/>
                                    <field name="accountability_expiry_date"/>
                                    <field name="accountability_overcome"/>
                                </group>
                                <field name="advance_voucher_ids" context="{'default_transaction_id':id, 'default_partner_id': partner_id, 'default_type': 'payment', 'form_view_ref': 'account_voucher.view_vendor_payment_form','tree_view_ref': 'account_voucher.view_voucher_tree'}"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- TREE VIEW -->
        <record id="view_public_budget_subsidy_tree" model="ir.ui.view">
            <field name="name">public_budget.subsidy.tree</field>
            <field name="model">public_budget.subsidy</field>
            <field name="arch" type="xml">
                <tree string="Subsidios">
                    <field name="name"/>
                    <field name="amount"/>
                    <field name="rendition_amount"/>
                    <field name="approved_amount"/>
                    <field name="pending_amount"/>
                    <field name="accountability_state"/>
                    <field name="state" invisible="1"/>
                </tree>
            </field>
        </record>

        <!-- SEARCH VIEW -->
        <record id="view_public_budget_subsidy_search" model="ir.ui.view">
            <field name="name">public_budget.subsidy.search</field>
            <field name="model">public_budget.subsidy</field>
            <field name="arch" type="xml">
                <search string="Subsidios">
                    <field name="name"/>
                    <field name="amount"/>
                    <field name="destination"/>
                    <field name="parliamentary_resolution_date"/>
                    <field name="parliamentary_expedient"/>
                    <field name="expedient_id" string="Expediente Administrativo de Solicitud"/>
                    <field name="accountability_administrative_expedient_id"/>
                    <filter string="Rendición Vencida" name="accountability_overcome" domain="[('accountability_overcome', '=', True)]"/>
                    <group expand="1" string="Group By">
                        <filter string="Estado de la Transacción" name="state" context="{'group_by':'state'}"/>
                        <filter string="Estado de la Rendición" name="accountability_state" context="{'group_by':'accountability_state'}"/>
                        <filter string="Fecha" name="date" context="{'group_by':'date'}"/>
                    </group>
                </search>
            </field>
        </record>

        <menuitem
            name="Contabilidad Responsable"
            id="menu_responsible_accounting"
            sequence="50"
            parent="public_budget.menu_budget_main"
            />


        <record id="action_public_budget_subsidy" model="ir.actions.act_window">
            <field name="name">Subsidios</field>
            <field name="res_model">public_budget.subsidy</field>
        </record>

        <menuitem
            id="menu_public_budget_subsidy"
            sequence="10"
            action="action_public_budget_subsidy"
            parent="menu_responsible_accounting"
            />
    </data>
</openerp>
